#! /usr/bin/env node
/**
 * @file        tests/homedir-override-scheduler.simple
 *              Using files in ../tests-homedir as if they were the user's homedir, 
 *              ensure correct dcpConfig inheritance
 * @author      Wes Garland, wes@kingsds.network
 * @date        Aug 2020
 */
'use strict';

require('./setup-testenv');

async function main() {
  await require('..').init();
  const dcpConfig = require('dcp/dcp-config');
  if (!dcpConfig.bank.location.pathname === '/from/tests-homedir/dcp-client/dcp-config')
    throw new Error('Homedir did not override scheduler location');
}

await main();
